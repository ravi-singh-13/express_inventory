extends layout 

block content 

    h1=title 

    form(method="POST" action="")
        div.form-group 
           label(for='name') Name: 
           input.form-control(type='text', name='name', placeholder="Product name",  value=(undefined == product ? '' : product.name))

        div.form-group
           label(for='price') Price: 
           input.form-control(type='number' name='price' placeholder='price', require='true', value=(undefined == product ? '' : product.price))
        
        div.form-group 
            label(for='description') Description: 
            input.form-control(type='textarea', name='description', placeholder='description', value=(undefined == product ? '' : product.description))

        div.form-group 
            label(for='image') Image: 
            input.form-control(type='url', name='image', placeholder="image url", value=(undefined == product ? '' : product.image))

        div.form-group
            label Category: 
            div
                for category in categories
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type="checkbox", name='category', id=category._id, value=category._id, checked=category.checked) 
                        label(for="category._id") #{category.name} 

        button.btn.btn-primary(type='submit') Submit            


    if errors 
        ul 
            for error in errors 
                li!= error.msg